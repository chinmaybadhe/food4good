<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="30dp"
    android:weightSum="20"
    tools:context=".RequesterLogin">


<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="30dp"-->
<!--        android:text="User Details"-->
<!--        android:textSize="20sp"-->
<!--        />-->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"


        android:text="First time user? Please register to have access to free food!"

        ></TextView>

    <EditText
        android:id="@+id/etName"
        android:hint="Enter Your name"
        android:textColorHint="#565656"
        android:textColor="#565656"
        android:layout_weight="1"
        android:background="@drawable/back"
        android:padding="7dp"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>

    <EditText
        android:id="@+id/etPhoneNumber"
        android:hint="(xxx) xxx-xxxx"
        android:layout_margin="30dp"
        android:textColorHint="#565656"
        android:textColor="#565656"

        android:background="@drawable/back"
        android:padding="7dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"></TextView>

    <Button
        android:id="@+id/btnRequesterSignIn"

        android:text="I am hungry"
        android:layout_width="match_parent"
        android:layout_weight="2.5"
        android:layout_height="0dp"></Button>

</LinearLayout>